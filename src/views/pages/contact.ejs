<%- include('../partials/head') %>
<!--  -->
<%- include('../partials/nav') %>
<section class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contatos</h1>
            <p class="text-center lead">Crie ou edite seus contatos abaixo</p>

            <%- include('../partials/messages')%>

            <form action="/contact/register" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
                <div class="form-group">
                    <label>Nome</label>
                    <input
                        value="<%= contact.name %>"
                        type="text"
                        class="form-control"
                        name="name"
                    />
                    <label>Sobrenome</label>
                    <input
                        value="<%= contact.surname %>"
                        type="text"
                        class="form-control"
                        name="surname"
                    />
                    <label>Telefone</label>
                    <input
                        value="<%= contact.tel%>"
                        type="tel"
                        class="form-control"
                        name="tel"
                    />
                    <label>E-mail</label>
                    <input
                        value="<%= contact.email %>"
                        type="email"
                        class="form-control"
                        name="email"
                    />
                </div>
                <button type="submit" class="btn btn-primary">
                    Salvar contato
                </button>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</section>
<!--  -->
<%- include('../partials/footer') %>
