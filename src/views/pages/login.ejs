<%- include('../partials/head') %>
<!--  -->
<%- include('../partials/nav') %>
<section class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Login ou cadastro</h1>
            <p class="text-center lead">Cadastre-se ou faça login abaixo</p>

            <%- include('../partials/messages') %>

            <div class="row">
                <div class="col-lg my-5">
                    <h4>Cadastre-se</h4>

                    <form
                        class="register-form"
                        action="/login/register"
                        method="post"
                    >
                        <input
                            type="hidden"
                            name="_csrf"
                            value="<%= csrfToken%>"
                        />
                        <div class="form-group">
                            <label>E-mail</label>
                            <input
                                type="email"
                                class="form-control"
                                name="email"
                            />
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input
                                type="password"
                                class="form-control"
                                name="password"
                            />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Criar conta
                        </button>
                    </form>
                </div>

                <div class="col-lg my-5">
                    <h4>Faça login</h4>
                    <form
                        class="login-form"
                        action="/login/login"
                        method="post"
                    >
                        <input
                            type="hidden"
                            name="_csrf"
                            value="<%= csrfToken%>"
                        />
                        <div class="form-group">
                            <label>E-mail</label>
                            <input
                                type="email"
                                class="form-control"
                                name="email"
                            />
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input
                                type="password"
                                class="form-control"
                                name="password"
                            />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Fazer login
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</section>
<!--  -->
<%- include('../partials/footer') %>
